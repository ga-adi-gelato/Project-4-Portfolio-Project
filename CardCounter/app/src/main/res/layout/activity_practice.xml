<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Your Count: "
            android:id="@+id/yourCount"
            android:textColor="#FFFFFF"
            android:shadowColor="#6E2626"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="+0"
            android:id="@+id/yourNum"
            android:textColor="#FFFFFF"
            android:shadowColor="#6E2626"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="4"
            android:layout_marginLeft="4dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:id="@+id/realLayout"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:visibility="invisible"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Real Count: "
            android:id="@+id/realCount"
            android:textColor="#FFFFFF"
            android:shadowColor="#6E2626"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="4"
            android:typeface="normal"
            android:elegantTextHeight="false"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="+0"
            android:id="@+id/realNum"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="4dp"
            android:shadowColor="#6E2626"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="4"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/realLayout"
        android:layout_above="@+id/bottomButtons">
        <ImageView
            android:id="@+id/card"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:elevation="12dp"
            android:contentDescription="card image" />
    </LinearLayout>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="bottom"
    android:paddingBottom="4dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:id="@+id/bottomButtons"
    android:layout_marginTop="8dp">

    <Button
        android:id="@+id/decreaseButton"
        android:text="-1"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:layout_width="100dp"
        android:layout_height="160dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#6E2626"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="4"
        android:layout_gravity="center"
        android:clickable="false"
        android:layout_weight="1"
        android:enabled="true"
        android:contextClickable="false" />

    <Button
        android:id="@+id/showButton"
        android:text="show count"
        android:textColor="#FFFFFF"
        android:textSize="28dp"
        android:layout_width="100dp"
        android:layout_height="160dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#6E2626"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="4"
        android:layout_gravity="center"
        android:clickable="false"
        android:layout_weight="1"
        android:contextClickable="false"
        android:enabled="true" />


    <Button
        android:id="@+id/increaseButton"
        android:text="+1"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:layout_width="100dp"
        android:layout_height="160dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#6E2626"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="4"
        android:layout_gravity="center"
        android:clickable="false"
        android:layout_weight="1"
        android:contextClickable="false"
        android:enabled="true" />


</LinearLayout>


</RelativeLayout>
